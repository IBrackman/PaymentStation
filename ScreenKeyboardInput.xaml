<UserControl x:Class="PaymentStation.ScreenKeyboardInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaymentStation"
             mc:Ignorable="d">
    
    <Border Background="White" CornerRadius="15,15,15,15" BorderThickness="1,1,1,1" BorderBrush="#FF7A8082">
        <StackPanel Orientation="Horizontal">
            <Grid Width="265">
                <Label Content="Код из СМС" FontSize="19" Padding="10,5,5,0" FontWeight="Light" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <TextBox Name="textBox" FontSize="26" BorderBrush="{x:Null}" Background="{x:Null}" SelectionTextBrush="{x:Null}" SelectionBrush="{x:Null}" HorizontalContentAlignment="Center" Foreground="#FF096BFF" VerticalAlignment="Center" HorizontalAlignment="Center" IsReadOnly="True" BorderThickness="0,0,0,0"/>
            </Grid>
            <local:ComplexButton x:Name="UCContinueButton" ButtonTag="ContinueButton" ButtonText="Продолжить" ButtonSize="200, 87" ButtonForeground="White" ButtonBackground="#FF97999A" ButtonFontSize="24" ButtonFontWeight="Light" ButtonCornerRadius="15,15,15,15" Margin="0,0,-1,0"/>
        </StackPanel>
    </Border>

</UserControl>
