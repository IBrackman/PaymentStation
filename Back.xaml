<UserControl x:Class="PaymentStation.Back"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaymentStation"
             mc:Ignorable="d">
    <Viewbox Width="93" Height="40">
        <Button x:Name="BackButton" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Style="{StaticResource ImageButtonStyle}">
            <StackPanel Orientation="Horizontal">
                <Image  Style="{StaticResource HQImage}" Source="sources/Back.JPG"/>
                <Label Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Padding="0,0,0,0" FontWeight="Light"/>
            </StackPanel>
        </Button>
    </Viewbox>
</UserControl>
