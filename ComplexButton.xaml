<UserControl x:Class="PaymentStation.ComplexButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaymentStation"
             mc:Ignorable="d">
    <Viewbox Name="viewbox">
        <Border Name="border">
            <Button Name="button" Style="{StaticResource EmptyButtonStyle}" Padding="0,0,0,0">
                <StackPanel Name="stackPanel">
                    <Image Name="image" Style="{StaticResource HQImage}"/>
                    <Label Name="label" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="0,0,0,0">
                        <TextBlock Name="textBlock" TextAlignment="Center" Padding="0,0,0,0"/>
                    </Label>
                </StackPanel>
            </Button>
        </Border>
    </Viewbox>
</UserControl>
